<div>
    @foreach (ThemeColor? color in ThemeColors.Items.Values)
    {
        <div @key="color.Key">
            @foreach (ThemeColorShade? shade in color.Shades.Values)
            {
                string? temp = shade.Value;

                <div class="demo-theme-color-item" @key="shade.Key" @onclick="@(() => OnThemeColorSelect(temp))" style="background: @temp"></div>
            }
        </div>
    }
</div>

@code{

    [Parameter]
    public string? Value { get; set; }

    [Parameter]
    public EventCallback<string> ValueChanged { get; set; }

    Task OnThemeColorSelect(string value)
    {
        Value = value;
        return ValueChanged.InvokeAsync(value);
    }

}