@page "/simple-datagrid"
<DataGrid Bordered
          Data="data"
          Editable
          Groupable
          Hoverable
          Narrow
          NewItemCreator="() => new Book(string.Empty, string.Empty, string.Empty, DateOnly.MinValue, string.Empty)"
          Resizable
          ResizeMode="TableResizeMode.Columns"
          Responsive
          ShowGrouping
          ShowPager
          ShowPageSizes
          Sortable
          SortMode="DataGridSortMode.Single"
          TItem="Book">
    <DataGridColumns>
        <DataGridColumn Caption="Title" Editable Field="@nameof(Book.Title)"></DataGridColumn>
        <DataGridColumn Caption="Author" Editable Field="@nameof(Book.Author)" Groupable></DataGridColumn>
        <DataGridColumn Caption="Isbn" Editable Field="@nameof(Book.Isbn)"></DataGridColumn>
        <DataGridColumn Caption="Publication Date" Editable Field="@nameof(Book.PublicationDate)"></DataGridColumn>
        <DataGridColumn Caption="Publisher" Editable Field="@nameof(Book.Publisher)"></DataGridColumn>
        <DataGridCommandColumn PreventRowClick>
            <NewCommandTemplate>
                <Button Clicked="@context.Clicked" Color="Color.Success">@context.LocalizationString</Button>
            </NewCommandTemplate>
            <EditCommandTemplate>
                <Button Clicked="@context.Clicked" Color="Color.Primary">@context.LocalizationString</Button>
            </EditCommandTemplate>
            <SaveCommandTemplate>
                <Button Clicked="@context.Clicked" Color="Color.Primary" PreventDefaultOnSubmit Type="ButtonType.Submit">@context.LocalizationString</Button>
            </SaveCommandTemplate>
            <DeleteCommandTemplate>
                <Button Clicked="@context.Clicked" Color="Color.Danger">@context.LocalizationString</Button>
            </DeleteCommandTemplate>
            <CancelCommandTemplate>
                <Button Clicked="@context.Clicked" Color="Color.Secondary">@context.LocalizationString</Button>
            </CancelCommandTemplate>
            <ClearFilterCommandTemplate>
                <Button Clicked="@context.Clicked" Color="Color.Warning">@context.LocalizationString</Button>
            </ClearFilterCommandTemplate>
        </DataGridCommandColumn>
    </DataGridColumns>
</DataGrid>

